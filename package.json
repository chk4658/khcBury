{
  "name": "@xmon/bury",
  "version": "0.3.3",
  "description": "monitor most action by mitt, 一个不入侵你业务代码的埋点系统",
  "main": "dist/index.js",
  "repository": "git@github.com:darkXmo/bury.git",
  "author": "Xmo <18851989097@163.com>",
  "keywords": [
    "event",
    "vue",
    "monitor",
    "aegis",
    "xmon",
    "listener",
    "bury"
  ],
  "license": "MIT",
  "dependencies": {
    "@fingerprintjs/fingerprintjs": "^3.3.0",
    "@xmon/monitor": "0.2.4",
    "mitt": "^3.0.0",
    "path-to-regexp": "^6.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "git-cz": "^4.8.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "2.4.1",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "src/**/*.vue": [
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.js": [
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.ts": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,ts,css,md}": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "commit": "git add . && git status && git-cz",
    "prepare": "husky install",
    "build": "yarn tsc",
    "clean": "rm -rf dist pnpm* yarn.* node_modules package-*",
    "publish": "yarn tsc && npm publish --access public"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}